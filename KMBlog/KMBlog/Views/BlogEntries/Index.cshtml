@model IEnumerable<KMBlog.Models.BlogEntry>

@{
    ViewBag.Title = "Index";
}




@if (ViewBag.PostType == ViewBag.topics)
{
    <div class="container">
        <a href="~/BlogEntries/Index?PostType=@ViewBag.Topic0"><h3>@ViewBag.Topic0</h3></a>
        <div class="row">
            @foreach (var post in Model)
            {
                if (post.PostType == ViewBag.Topic0)
                {
                    <div class="col-md-4" style="padding-bottom: 33px;">
                        <div class="blog-entry" style="border-style:groove; border-width:.25px">
                            <div class="blog-img">
                                <a href="~/BlogEntries/Details?slug=@post.Slug"><img src=@post.AbstractImageURL class="img-responsive" style="width:100%"></a>
                            </div>
                            <div class="desc">
                                <p class="meta">
                                    <span class="cat"><a href="#">@post.PostType</a></span>
                                    <span class="date">@post.CreationDate</span>
                                    <span class="pos">By @ViewBag.Author</span>
                                </p>
                                <h2><a href="~/BlogEntries/Details?slug=@post.Slug">@post.Title</a></h2>
                                <p>@post.Abstract</p>
                            </div>
                        </div>
                    </div>
                }
                if (User.IsInRole("Admin"))
                {
                    <p>
                        @Html.ActionLink("Edit", "Edit",new { Slug = post.Slug })
                    </p>
                }
            }
        </div>
    </div>
